<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/separateLine"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginBottom="48dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/resetButton"
        app:layout_constraintEnd_toEndOf="@+id/resetButton"
        app:layout_constraintStart_toStartOf="@+id/resetButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="RESET"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separateLine" />

    <TextView
        android:id="@+id/teamALabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TEAM A"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/separateLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teamACount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="0"
        android:textSize="36dp"
        app:layout_constraintEnd_toStartOf="@+id/separateLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamALabel" />

    <Button
        android:id="@+id/teamA1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="+1 POINT"
        app:layout_constraintBottom_toTopOf="@+id/teamA2Button"
        app:layout_constraintEnd_toStartOf="@+id/separateLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamACount"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/teamA2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="+2 POINT"
        app:layout_constraintBottom_toTopOf="@+id/teamA3Button"
        app:layout_constraintEnd_toStartOf="@+id/separateLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamA1Button" />

    <Button
        android:id="@+id/teamA3Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="+3 POINT"
        app:layout_constraintBottom_toBottomOf="@+id/separateLine"
        app:layout_constraintEnd_toStartOf="@+id/separateLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamA2Button" />

    <TextView
        android:id="@+id/teamBLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TEAM B"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/separateLine"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teamBCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="0"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="@+id/separateLine"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamBLabel" />

    <Button
        android:id="@+id/teamB1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="+1 POINT"
        app:layout_constraintBottom_toTopOf="@+id/teamB2Button"
        app:layout_constraintEnd_toEndOf="@+id/separateLine"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamBCount"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/teamB2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="+2 POINT"
        app:layout_constraintBottom_toTopOf="@+id/teamB3Button"
        app:layout_constraintEnd_toEndOf="@+id/separateLine"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamB1Button" />

    <Button
        android:id="@+id/teamB3Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="+3 POINT"
        app:layout_constraintBottom_toBottomOf="@+id/separateLine"
        app:layout_constraintEnd_toEndOf="@+id/separateLine"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamB2Button" />


</androidx.constraintlayout.widget.ConstraintLayout>